generator client {
  provider = "prisma-client"
  output   = "../generated"
}

datasource db {
  provider = "postgresql"
  schemas  = ["ambrosio"]
}

model pais {
  id                  Int      @id @default(autoincrement())
  isoAlpha2           String   @db.VarChar(2)
  nome                String   @unique @db.VarChar(100)
  regiao              String   @db.VarChar(100)
  subRegiao           String   @db.VarChar(100)
  regiaoIntermediaria String?  @db.VarChar(100)
  lingua              String   @db.VarChar(50)
  capital             String   @db.VarChar(100)
  estado              estado[]

  @@schema("ambrosio")
}

model estado {
  id     Int      @id @default(autoincrement())
  nome   String   @unique @db.VarChar(100)
  sigla  String   @unique @db.VarChar(2)
  ativo  Boolean  @default(true)
  paisId Int
  cidade cidade[]
  pais   pais     @relation(fields: [paisId], references: [id])

  @@schema("ambrosio")
}

model cidade {
  id       Int        @id @default(autoincrement())
  nome     String     @unique @db.VarChar(100)
  estadoId Int
  ativo    Boolean    @default(true)
  estado   estado     @relation(fields: [estadoId], references: [id])
  endereco endereco[]

  @@schema("ambrosio")
}

model endereco {
  id         Int              @id @default(autoincrement())
  cep        String           @db.VarChar(8)
  logradouro String           @db.VarChar(50)
  bairro     String           @db.VarChar(50)
  numero     String           @db.VarChar(5)
  cidadeId   Int              @default(1)
  observacao String?          @db.VarChar(250)
  diocese    diocese[]
  cidade     cidade           @relation(fields: [cidadeId], references: [id])
  localidade localidade[]
  paroquias  paroquia[]
  pessoas    pessoaEndereco[]

  @@schema("ambrosio")
}

model estadoCivil {
  id        Int    @id @default(autoincrement())
  descricao String @unique @db.VarChar(20)

  @@schema("ambrosio")
}

model escolaridade {
  id        Int    @id @default(autoincrement())
  descricao String @unique @db.VarChar(30)

  @@schema("ambrosio")
}

model pessoa {
  id                   Int                @id @default(autoincrement())
  ativo                Boolean            @default(true)
  situacaoReligiosaId  Int
  externalId           String             @unique @db.VarChar(36)
  comunidadePessoas    comunidadePessoa[]
  equipePessoas        equipePessoa[]
  passaportes          passaportePessoa[]
  situacaoReligiosa    situacaoReligiosa  @relation(fields: [situacaoReligiosaId], references: [id])
  pessoaCarismas       pessoaCarisma[]
  casamentosComoMarido pessoaCasal[]      @relation("Marido")
  casamentosComoMulher pessoaCasal[]      @relation("Mulher")
  contatos             pessoaContato[]
  enderecos            pessoaEndereco[]
  user                 user[]
  createdAt            DateTime           @default(now())
  updatedAt            DateTime           @default(now()) @updatedAt

  @@index([externalId])
  @@schema("ambrosio")
}

model situacaoReligiosa {
  id        Int      @id @default(autoincrement())
  descricao String   @unique @db.VarChar(50)
  sexoUnico Sexo?
  pessoa    pessoa[]

  @@schema("ambrosio")
}

model carisma {
  id             Int             @id @default(autoincrement())
  descricao      String          @db.VarChar(100)
  tipo           tipoCarismaEnum
  casalAndaJunto Boolean         @default(false)
  pessoaCarismas pessoaCarisma[]

  @@unique([descricao, tipo])
  @@schema("ambrosio")
}

model pessoaCarisma {
  id         Int      @id @default(autoincrement())
  pessoaId   Int
  carismaId  Int
  observacao String?  @db.VarChar(255)
  createdAt  DateTime @default(now())
  carisma    carisma  @relation(fields: [carismaId], references: [id], onDelete: Cascade)
  pessoa     pessoa   @relation(fields: [pessoaId], references: [id], onDelete: Cascade)

  @@unique([pessoaId, carismaId])
  @@schema("ambrosio")
}

model pessoaEndereco {
  pessoaId   Int
  enderecoId Int
  endereco   endereco @relation(fields: [enderecoId], references: [id], onDelete: Cascade)
  pessoa     pessoa   @relation(fields: [pessoaId], references: [id], onDelete: Cascade)

  @@id([pessoaId, enderecoId])
  @@schema("ambrosio")
}

model pessoaCasal {
  id             Int    @id @default(autoincrement())
  pessoaMaridoId Int
  pessoaMulherId Int
  marido         pessoa @relation("Marido", fields: [pessoaMaridoId], references: [id], onDelete: Cascade)
  mulher         pessoa @relation("Mulher", fields: [pessoaMulherId], references: [id], onDelete: Cascade)

  @@unique([pessoaMaridoId, pessoaMulherId])
  @@schema("ambrosio")
}

model passaportePessoa {
  id            Int       @id @default(autoincrement())
  pessoaId      Int
  numero        String
  dataExpiracao DateTime
  renovado      Boolean   @default(false)
  dataRenovacao DateTime?
  pessoa        pessoa    @relation(fields: [pessoaId], references: [id], onDelete: Cascade)

  @@schema("ambrosio")
}

model pessoaContato {
  id                  Int     @id @default(autoincrement())
  telefoneResidencial String?
  telefoneCelular     String?
  observacao          String?
  ativo               Boolean @default(true)
  email               String?
  pessoaId            Int
  pessoa              pessoa  @relation(fields: [pessoaId], references: [id], onDelete: Cascade)

  @@schema("ambrosio")
}

model tipoDiocese {
  id        Int       @id @default(autoincrement())
  descricao String    @db.VarChar(50)
  dioceses  diocese[]

  @@schema("ambrosio")
}

model diocese {
  id            Int          @id @default(autoincrement())
  tipoDioceseId Int
  descricao     String       @db.VarChar(90)
  enderecoId    Int
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @default(now()) @updatedAt
  endereco      endereco     @relation(fields: [enderecoId], references: [id])
  tipoDiocese   tipoDiocese  @relation(fields: [tipoDioceseId], references: [id])
  localidade    localidade[]
  paroquias     paroquia[]

  @@schema("ambrosio")
}

model paroquia {
  id          Int          @id @default(autoincrement())
  enderecoId  Int
  dioceseId   Int
  descricao   String       @db.VarChar(50)
  setorId     Int          @default(1)
  comunidades comunidade[]
  diocese     diocese      @relation(fields: [dioceseId], references: [id])
  endereco    endereco     @relation(fields: [enderecoId], references: [id])
  setor       setor        @relation(fields: [setorId], references: [id])

  @@schema("ambrosio")
}

model etapa {
  id               Int               @id @default(autoincrement())
  descricao        String            @db.VarChar(50)
  comunidadeEtapas comunidadeEtapa[]

  @@schema("ambrosio")
}

model tipoEquipe {
  id        Int      @id @default(autoincrement())
  descricao String   @db.VarChar(80)
  equipes   equipe[]

  @@schema("ambrosio")
}

model equipe {
  id               Int               @id @default(autoincrement())
  descricao        String            @db.VarChar(80)
  tipoEquipeId     Int
  observacao       String?           @db.VarChar(255)
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @default(now()) @updatedAt
  comunidadeEtapas comunidadeEtapa[]
  tipoEquipe       tipoEquipe        @relation(fields: [tipoEquipeId], references: [id])
  equipePessoas    equipePessoa[]

  @@schema("ambrosio")
}

model equipePessoa {
  id         Int      @id @default(autoincrement())
  equipeId   Int
  pessoaId   Int
  observacao String?  @db.VarChar(255)
  createdAt  DateTime @default(now())
  equipe     equipe   @relation(fields: [equipeId], references: [id], onDelete: Cascade)
  pessoa     pessoa   @relation(fields: [pessoaId], references: [id], onDelete: Cascade)

  @@unique([equipeId, pessoaId])
  @@schema("ambrosio")
}

model localidade {
  id               Int            @id @default(autoincrement())
  descricao        String         @db.VarChar(80)
  dioceseId        Int
  tipoLocalidadeId Int
  observacao       String?
  enderecoId       Int
  diocese          diocese        @relation(fields: [dioceseId], references: [id])
  endereco         endereco       @relation(fields: [enderecoId], references: [id])
  tipoLocalidade   tipoLocalidade @relation(fields: [tipoLocalidadeId], references: [id])

  @@schema("ambrosio")
}

model tipoLocalidade {
  id         Int          @id @default(autoincrement())
  descricao  String       @db.VarChar(80)
  localidade localidade[]

  @@schema("ambrosio")
}

model user {
  id               String   @id @default(cuid())
  email            String   @unique
  password         String
  role             roles    @default(NAO_IDENTIFICADO)
  whatsapp         String?  @db.VarChar(20)
  verifiedWhatsapp Boolean  @default(false)
  active           Boolean  @default(false)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  pessoaId         Int?
  pessoa           pessoa?  @relation(fields: [pessoaId], references: [id])

  @@schema("ambrosio")
}

model setor {
  id        Int        @id @default(autoincrement())
  descricao String     @unique @db.VarChar(50)
  ativo     Boolean    @default(true)
  regiaoId  Int        @default(1)
  paroquia  paroquia[]
  regiao    regiao     @relation(fields: [regiaoId], references: [id])

  @@unique([descricao, regiaoId])
  @@schema("ambrosio")
}

model macroRegiao {
  id        Int      @id @default(autoincrement())
  descricao String   @db.VarChar(50)
  ativo     Boolean  @default(true)
  regiao    regiao[]

  @@schema("ambrosio")
}

model regiao {
  id            Int         @id @default(autoincrement())
  descricao     String      @unique @db.VarChar(100)
  macroRegiaoId Int
  ativo         Boolean     @default(true)
  macroRegiao   macroRegiao @relation(fields: [macroRegiaoId], references: [id])
  setor         setor[]

  @@unique([descricao, macroRegiaoId])
  @@schema("ambrosio")
}

model comunidade {
  id                   Int                   @id @default(autoincrement())
  numeroDaComunidade   Int
  quantidadeMembros    Int
  observacao           String?               @db.VarChar(250)
  paroquiaId           Int
  createdAt            DateTime              @default(now())
  updatedAt            DateTime              @default(now()) @updatedAt
  paroquia             paroquia              @relation(fields: [paroquiaId], references: [id])
  comunidadeEtapas     comunidadeEtapa[]
  comunidadePessoas    comunidadePessoa[]
  comunidadeHistoricos comunidadeHistorico[]

  @@unique([numeroDaComunidade, paroquiaId])
  @@schema("ambrosio")
}

model comunidadeEtapa {
  id               Int        @id @default(autoincrement())
  comunidadeId     Int
  etapaId          Int
  dataInicio       DateTime?
  dataFim          DateTime?
  observacao       String?    @db.VarChar(250)
  createdAt        DateTime   @default(now())
  equipeId         Int?
  updatedAt        DateTime   @default(now()) @updatedAt
  localConvivencia String?    @db.VarChar(180)
  comunidade       comunidade @relation(fields: [comunidadeId], references: [id], onDelete: Cascade)
  equipe           equipe?    @relation(fields: [equipeId], references: [id])
  etapa            etapa      @relation(fields: [etapaId], references: [id], onDelete: Cascade)

  @@schema("ambrosio")
}

model comunidadePessoa {
  id           Int        @id @default(autoincrement())
  comunidadeId Int
  pessoaId     Int
  dataEntrada  DateTime
  dataSaida    DateTime?
  observacao   String?    @db.VarChar(250)
  createdAt    DateTime   @default(now())
  comunidade   comunidade @relation(fields: [comunidadeId], references: [id], onDelete: Cascade)
  pessoa       pessoa     @relation(fields: [pessoaId], references: [id], onDelete: Cascade)

  @@unique([comunidadeId, pessoaId])
  @@schema("ambrosio")
}

model comunidadeHistorico {
  id           Int        @id @default(autoincrement())
  comunidadeId Int
  descricao    String?    @db.Text
  comunidade   comunidade @relation(fields: [comunidadeId], references: [id], onDelete: Cascade)
  createdAt    DateTime   @default(now())

  @@schema("ambrosio")
}

enum Sexo {
  MASCULINO
  FEMININO

  @@schema("ambrosio")
}

enum tipoCarismaEnum {
  SERVICO
  VINCULADO
  PRIMITIVO

  @@schema("ambrosio")
}

enum roles {
  ADMIN
  CATEQUISTA_NACIONAL
  CATEQUISTA_GRANDE_REGIAO
  CATEQUISTA_REGIAO
  CATEQUISTA_SETOR
  CATEQUISTA_PAROQUIA
  SECRETARIA_CNC
  SECRETARIA_PAROQUIA
  NAO_IDENTIFICADO

  @@schema("ambrosio")
}
